{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template para criar um bucket S3 e uma função Lambda que é acionada no upload de objetos.",

  "Parameters": {
    "S3BucketName": {
      "Type": "String",
      "Description": "Nome para o bucket S3. Deve ser globalmente único e em letras minúsculas."
    }
  },

  "Resources": {
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ]
      }
    },

    "S3TriggerLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": { "Fn::Sub": "S3TriggerLambda-${AWS::StackName}" },
        "Handler": "index.handler",
        "Role": { "Fn::GetAtt": ["LambdaExecutionRole", "Arn"] },
        "Runtime": "python3.9",
        "Code": {
          "ZipFile": "import json\n\ndef handler(event, context):\n    bucket = event['Records'][0]['s3']['bucket']['name']\n    key = event['Records'][0]['s3']['object']['key']\n    print(f'Evento recebido do S3! Arquivo {key} foi carregado no bucket {bucket}.')\n    return {\n        'statusCode': 200,\n        'body': json.dumps('Log gerado com sucesso!')\n    }\n"
        }
      }
    },

    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { "Ref": "S3BucketName" },
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event": "s3:ObjectCreated:*",
              "Function": { "Fn::GetAtt": ["S3TriggerLambdaFunction", "Arn"] }
            }
          ]
        }
      }
    },

    "LambdaInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": { "Fn::GetAtt": ["S3TriggerLambdaFunction", "Arn"] },
        "Action": "lambda:InvokeFunction",
        "Principal": "s3.amazonaws.com",
        "SourceArn": { "Fn::Sub": "arn:aws:s3:::${S3BucketName}" }
      }
    }
  },

  "Outputs": {
    "BucketName": {
      "Description": "Nome do bucket S3 criado",
      "Value": { "Ref": "S3Bucket" }
    },
    "LambdaFunctionName": {
      "Description": "Nome da função Lambda criada",
      "Value": { "Ref": "S3TriggerLambdaFunction" }
    }
  }
}